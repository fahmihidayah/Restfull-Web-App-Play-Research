# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST	/api/insert_siswa			controllers.Application.insert()
POST	/api/edit_siswa				controllers.Application.edit()
POST	/api/delete_siswa			controllers.Application.delete()
POST	/api/list_siswa				controllers.Application.list()

POST	/api/insert_kelas			controllers.ApplicationKelas.insert()
POST 	/api/delete_kelas			controllers.ApplicationKelas.delete()
POST	/api/edit_kelas 			controllers.ApplicationKelas.edit()
POST 	/api/list_kelas 			controllers.ApplicationKelas.list()

POST	/api/add_siswa				controllers.ApplicationKelas.addSiswa()
POST	/api/remove_siswa			controllers.ApplicationKelas.removeSiswa()

POST	/api/insert_guru			controllers.ApplicationGuru.insert()
POST 	/api/delete_guru			controllers.ApplicationGuru.delete()
POST	/api/edit_guru				controllers.ApplicationGuru.edit()
POST 	/api/list_guru 				controllers.ApplicationGuru.list()

POST 	/api/insert_user			controllers.ApplicationAccount.insert()

POST	/api/login					controllers.SecurityController.login()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
